{
  "name": "sustainhub-webapp",
  "version": "1.0.0",
  "description": "Smart Fridge Manager - Full Stack Application",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\" --names \"backend,frontend\" --prefix-colors \"blue,magenta\"",
    "start:backend": "npm start --prefix backend",
    "start:frontend": "npm run dev --prefix frontend",
    "seed": "npm run seed --prefix backend",
    "test-api": "npm run test-api --prefix backend",
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "build": "npm run build:frontend",
    "start": "NODE_ENV=production npm start --prefix backend",
    "docker:build": "docker build -t sustainhub-webapp .",
    "docker:run": "docker run -p 3001:3001 -v $(pwd)/backend/fridge.db:/app/backend/fridge.db sustainhub-webapp",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose down && docker-compose up -d --build"
  },
  "keywords": [
    "fridge",
    "recipe",
    "esp32",
    "iot",
    "sustainability"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
